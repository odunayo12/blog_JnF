<%- include("partials/header"); -%>

<!--Main layout-->
<main>


    <div class="container">

        <!--Section: Main info-->




        <!-- if (post.section == 'Article' && ){ } -->
        <section class="mt-5 wow fadeIn">

            <!--Grid row-->


            <div class="row">
                <!--Grid column-->
                <!-- <div class="col-md-6 mb-4"> -->
                <%posts.forEach(function (post, index){%>
                <% var articlePostDate = new Date(post.date_posted) %>
                <% var articlePostMonth = articlePostDate.getMonth()%>
                <% var currentMonth = todaysMonth %>

                <!-- col-md-4 mb-6 -->
                <div class="col-md-4 mb-6 scrolling-wrapper">
                    <% if ( articlePostMonth ==  currentMonth ) {%>
                    <!-- card-deck -->
                    <div class="">
                        <!-- for cards -->
                        <!-- https://codepen.io/JeremyWink/pen/oNvybqX, https://codepen.io/AbubakerSaeed/pen/ExVWLZm,  https://www.tgwilkins.co.uk/, https://codeburst.io/how-to-create-horizontal-scrolling-containers-d8069651e9c6-->
                        <div class="card  mt-3  d-flex tab-card hoverable ">
                            <!-- Card image -->
                            <div class="card-image" style="background-image: url('images/svg/<%= index %>.svg');">

                                <!-- Content -->
                                <div class="text-white  d-flex align-items-center rgba-black-light py-5 px-4">
                                    <div>
                                        <!-- <h5 class="pink-text"><i class="fas fa-chart-pie"></i> Marketing</h5> -->
                                        <h3 class="card-title pt-2"><strong><%= post.post_body._title %></strong></h3>
                                        <h5 class="card-title">By:
                                            <%= post.author._title%>
                                            <%= post.author._FName %>
                                            <%= post.author._LName %>


                                        </h5>
                                    </div>
                                </div>

                            </div>


                            <!-- Card Image -->

                            <!-- Card Header -->
                            <div class="card-header tab-card-header">
                                <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="one-tab<%= post._id %>" data-toggle="tab"
                                            href="#one<%= post._id %>" role="tab" aria-controls="One"
                                            aria-selected="true">Introduction</a>

                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" id="three-tab<%= post._id %>" data-toggle="tab"
                                            href="#three<%= post._id %>" role="tab" aria-controls="Three"
                                            aria-selected="false">Tags</a>
                                    </li>
                                </ul>
                            </div>
                            <!-- Card Header -->

                            <!-- Card Content -->
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active p-3" id="one<%= post._id %>" role="tabpanel"
                                    aria-labelledby="one-tab<%= post._id %>">
                                    <h5 class="card-title">Tab Card One</h5>
                                    <p class="card-text">
                                        <%= post.post_body._intro.substring(0, 200) + " ..." %> <br>

                                    <p class="">
                                        <date class="">
                                            <%=articlePostDate.toDateString()%>
                                        </date>

                                    </p>




                                    </p>

                                    <a href="/posts/<%= post._id %>/<%= post.tags %>" class="btn btn-primary">
                                        Read More</a>
                                </div>


                                <div class="tab-pane fade p-3" id="three<%= post._id %>" role="tabpanel"
                                    aria-labelledby="three-tab<%= post._id %>">
                                    <h5 class="card-title">Tab Card Three</h5>
                                    <div class="card-text">
                                        <%post.tags.forEach((tag) => {%>
                                        <div class="chip ">
                                            <%= tag %>
                                        </div>
                                        <%});%>
                                    </div>
                                    <p class="card-text">
                                    </p>

                                    <a href="/posts/<%= post._id %>/<%= post.tags %>" class="btn btn-primary" %>">
                                        Read More</a>
                                </div>

                            </div>
                            <!-- Card Content -->

                        </div>
                    </div>


                    <%}%>


                                    </div>
                                    <%});%>

                </div>




            </div>
        </section>

    </div>
</main>

